{
	"name": "[project_name]-monorepo",
	"private": true,
	"homepage": "https://github.com/[username]/[repo_name]#readme",
	"bugs": {
		"url": "https://github.com/[username]/[repo_name]/issues"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/[username]/[repo_name].git"
	},
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"format": "oxfmt",
		"lint": "oxlint",
		"prepare": "bun simple-git-hooks",
		"release": "bumpp -r --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "bun run --filter '*' type-check"
	},
	"devDependencies": {
		"@types/bun": "^1.3.9",
		"bumpp": "^10.4.1",
		"bunup": "^0.16.26",
		"oxfmt": "^0.33.0",
		"oxlint": "^1.48.0",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	}
}
