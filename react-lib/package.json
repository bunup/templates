{
	"name": "my-react-lib",
	"description": "A react component library",
	"version": "0.1.0",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./styles.css": "./dist/index.css"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bun run --cwd test/ui dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"release": "bumpp --commit --push --tag",
		"prepare": "simple-git-hooks"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "^1.2.22",
		"@types/react": "^19.1.13",
		"bumpp": "^10.2.3",
		"bunup": "^0.11.26",
		"lightningcss": "^1.30.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0",
		"react": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
		"react-dom": "^18.0.0 || ^19.0.0 || ^19.0.0-rc"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint:fix && git add ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/username/repo-name.git"
	},
	"bugs": {
		"url": "https://github.com/username/repo-name/issues"
	},
	"workspaces": [
		"test/**"
	],
	"homepage": "https://github.com/username/repo-name#readme"
}
