{
	"name": "my-ts-lib-monorepo",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/username/repo-name.git"
	},
	"type": "module",
	"private": true,
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"tsc": "tsc --noEmit",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"release": "bumpp -r --commit --push --tag",
		"prepare": "simple-git-hooks"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@types/bun": "^1.2.21",
		"bumpp": "^10.2.3",
		"bunup": "^0.11.24",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.2"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint:fix && git add ."
	},
	"workspaces": [
		"packages/*"
	],
	"homepage": "https://github.com/username/repo-name#readme",
	"bugs": {
		"url": "https://github.com/username/repo-name/issues"
	},
	"license": "MIT"
}
